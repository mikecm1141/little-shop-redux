<h1>Edit <%= @item.name %></h1>
<form action="/items/<%= @item.id %>/edit" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <label>Merchant</label><br />
  <select name="item[merchant_id]">
    <% @merchants.each do |merchant| %>
      <option value="<%= merchant.id %>" <%= 'selected' if merchant.id == @item.merchant_id %>>
        <%= merchant.name %>
      </option>
    <% end %>
  </select><br />
  <label>Title</label><br />
  <input type="text" name="item[name]" value="<%= @item.name %>"><br />
  <label>Description</label><br />
  <textarea name="item[description]"><%= @item.description %></textarea><br />
  <label>Price</label><br />
  <input type="text" name="item[unit_price]" value="<%= @item.unit_price %>"><br />
  <label>Image URL</label><br />
  <input type="text" name="item[image]" value="<%= @item.image %>"><br />
  <input type="submit" value="Update">

  <a href='/items'>Cancel</a>

</form>
