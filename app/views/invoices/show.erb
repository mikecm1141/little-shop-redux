<h1>Invoice: <%= @invoice.id %> - <%= @invoice.status %></h1>
<h2><a href="/merchants/<%= @invoice.merchant_id %>"><%= @invoice.merchant.name %></a></h2>
<form action="/invoices/<%= @invoice.id %>" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete">
</form>
<% @invoice.invoice_items.all.each do |invoice_item| %>
<ul>
  <li id="item-id-<%= invoice_item.item_id %>"><%= invoice_item.item_id %></li>
  <li><%= invoice_item.item.name %></li>
  <li><%= number_to_currency(invoice_item.unit_price) %></li>
  <li id="invoice-item-quantity-<%= invoice_item.id %>"><%= invoice_item.quantity %></li>
</ul>
<% end %>
